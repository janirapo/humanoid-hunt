{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2018",
    "noImplicitAny": true,
    "moduleResolution": "Node",
    "isolatedModules": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": false,
    "sourceMap": true,
    "strict": true,
    "outDir": "build",
    "baseUrl": ".",
    "skipLibCheck": true,
    "paths": {
      "*": [
        "node_modules/*",
        "src/types/*"
      ]
    }
  },
  "include": [
    "src/**/*",
  ],
  "exclude": [
    "src/**/__tests__/**/*",
    "src/**/__mocks__/**/*"
  ]
}